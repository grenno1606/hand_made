<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_product"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/sp1a"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/tv_dpe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-16%"
                android:textSize="17dp"
                android:textColor="#107836"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#eee">

            <ImageView
                android:id="@+id/img_heart"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#107836"
                android:layout_marginRight="1dp"
                android:padding="7dp"
                android:src="@drawable/heart_solid_white" />

            <ImageView
                android:id="@+id/img_cart"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:padding="7dp"
                android:layout_weight="1"
                android:background="#107836"
                android:layout_marginRight="1dp"
                android:src="@drawable/cart_plus_solid_white"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:padding="7dp"
                android:src="@drawable/share_solid"
                android:background="#107836"
                android:layout_weight="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_pn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:gravity="center"
            android:text="Thẻ đánh dấu sách"
            android:textColor="@color/black"
            android:textSize="17dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv_dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="#107836"
                android:gravity="end"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="&#8363;"
                android:textSize="17dp"
                android:paddingRight="5dp"
                android:textStyle="bold"
                android:textColor="#107836"
                android:gravity="start"/>

            <TextView
                android:id="@+id/tv_op"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="13dp"
                android:textColor="#866a3b"
                android:gravity="bottom|start"/>

            <TextView
                android:id="@+id/tv_dong"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="13dp"
                android:textColor="#866a3b"
                android:gravity="bottom|start"
                android:text="&#8363;"/>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>